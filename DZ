#include <iostream>
using namespace std;

int main()
{
    int k, n;
    cout << "K:";
    cin >> k;

    cout << "N:";
    cin >> n;

    int i;
    for  (i = 0; i < n;  ++i)
        cout << k << endl;
    
}

